{% extends "base.jinja" %}
{% block title %}{{ customer_noun }} Dashboard{% endblock %}
{% block content %}

<div>
    <h2>Welcome {{ session['human_name'] }}!</h2>
    <p>This dashboard helps track your {{ product_attributes.nouns }} with {{ company_name }}.</p>
</div>

<div class="row text-center mb-3">
    <div class="col-md-4">
        <h4 class="bg-primary p-2 display-8 rounded text-white"><strong>USD - Pending Balance</strong></h4>
        <h3 class="bg-primary p-2 display-8 rounded text-white">${{ usd_balance.balances.pending_balance.amount }}</h3>
    </div>
    <div class="col-md-4">
        <h4 class="bg-primary p-2 display-8 rounded text-white"><strong>USD - Posted Balance</strong></h4>
        <h3 class="bg-primary p-2 display-8 rounded text-white">${{ usd_balance.balances.posted_balance.amount }}</h3>
    </div>
    <div class="col-md-4">
        <h4 class="bg-primary p-2 display-8 rounded text-white"><strong>USD - Available Balance</strong></h4>
        <h3 class="bg-primary p-2 display-8 rounded text-white">${{ usd_balance.balances.available_balance.amount }}</h3>
    </div>
</div>
<div class="row text-left mb-3">
    <div class="col display-6" >Make a deposit</div>
</div>
<div class="row row-cols-auto">
    <div class="col col-xs-4">
        <a class="btn btn-info" href="/bank-deposit">Bank Account</a>
    </div>
    <div class="col col-xs-4">
        <button class="btn btn-info">Credit Card</button>
    </div>
</div>
<br>
<hr>
<br>
<div class="row">
    <div class="col-md-8">
        <h4>Portfolio Breakdown</h4>
        <img src="/static/pie-chart.png" class="img-fluid" alt="{{ company_name }} Pie Chart">
    </div>
    <div class="col-md-4">
        <h4>News Feed</h4>
        <img src="/static/news-feed-short.png" class="img-fluid" alt="{{ company_name }} Returns Graph">
    </div>
</div>
{% endblock %}